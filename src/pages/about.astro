			}
			
			/* Tools Section */
			.tools-section {
				padding: 5rem 0;
			}
			.tools-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
				gap: 1.5rem;
				justify-items: center;
			}
			.tool-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 0.75rem;
				padding: 1.5rem;
				background: var(--bg-card);
				border-radius: 12px;
				border: 1px solid var(--border-color);
				transition: all 0.3s ease;
				width: 100%;
			}
			.tool-item:hover {
				transform: translateY(-5px);
				border-color: var(--accent);
			}
			.tool-icon {
				font-size: 2.5rem;
			}
			.tool-name {
				color: var(--text-secondary);
				font-size: 0.85rem;
				text-align: center;
			}
			
			/* CTA Section */
			.cta-section {
				padding: 5rem 0;
				text-align: center;
			}
			.cta-card {
				background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(245, 158, 11, 0.05) 100%);
				padding: 4rem;
				border-radius: 24px;
				border: 1px solid rgba(245, 158, 11, 0.2);
			}
			.cta-card h2 {
				font-size: 2.5rem;
				color: var(--text-primary);
				margin-bottom: 1rem;
			}
			.cta-card p {
				color: var(--text-secondary);
				font-size: 1.1rem;
				max-width: 500px;
				margin: 0 auto 2rem;
			}
			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.cta-btn {
				padding: 1rem 2.5rem;
				border-radius: 10px;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s ease;
			}
			.cta-btn.primary {
				background: var(--accent-gradient);
				color: #000;
			}
			.cta-btn.primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
			}
			.cta-btn.secondary {
				background: transparent;
				color: var(--text-primary);
				border: 1px solid var(--border-color);
			}
			.cta-btn.secondary:hover {
				border-color: var(--accent);
				color: var(--accent);
			}
			
			/* Social Links */
			.social-links {
				display: flex;
				gap: 1rem;
				margin-top: 2rem;
			}
			.social-link {
				width: 50px;
				height: 50px;
				display: flex;
				align-items: center;
				justify-content: center;
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 12px;
				font-size: 1.3rem;
				color: var(--text-secondary);
				text-decoration: none;
				transition: all 0.3s ease;
			}
			.social-link:hover {
				background: var(--accent);
				color: #000;
				border-color: var(--accent);
				transform: translateY(-3px);
			}
			
			/* Responsive */
			@media (max-width: 900px) {
				.about-hero {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
				.about-image {
					max-width: 400px;
					margin: 0 auto;
				}
				.stats-row {
					justify-content: center;
				}
				.timeline::before {
					left: 20px;
				}
				.timeline-item,
				.timeline-item:nth-child(even) {
					flex-direction: row;
					padding-left: 50px;
				}
				.timeline-item::before {
					left: 20px;
				}
				.timeline-spacer {
					display: none;
				}
			}
			@media (max-width: 600px) {
				.page-header h1 {
					font-size: 2.5rem;
				}
				.about-content h2 {
					font-size: 2rem;
				}
				.stat-number {
					font-size: 2rem;
				}
				.cta-card {
					padding: 2rem;
				}
			}
		</style>
