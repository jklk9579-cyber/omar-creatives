    .nav-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: 10px;
      margin-bottom: 0.25rem;
      transition: all 0.2s;
    }
    
    .nav-link:hover { background: var(--bg-tertiary); color: var(--text-primary); }
    .nav-link.active { background: rgba(245, 158, 11, 0.15); color: var(--accent); }
    
    .nav-link .badge {
      margin-left: auto;
      padding: 0.15rem 0.5rem;
      background: var(--accent);
      color: #000;
      border-radius: 10px;
      font-size: 0.7rem;
      font-weight: 600;
    }
    
    .nav-icon { font-size: 1.1rem; }
    
    /* Main Content */
    .main-content {
      flex: 1;
      margin-left: 280px;
      padding: 2rem;
      transition: all 0.3s ease;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .header-left h1 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
    }
    
    .header-left p { color: var(--text-muted); }
    
    .header-actions {
      display: flex;
      gap: 0.75rem;
      align-items: center;
    }
    
    .theme-toggle, .notifications-btn {
      width: 45px;
      height: 45px;
      border-radius: 12px;
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      transition: all 0.2s;
      color: var(--text-primary);
    }
    
    .theme-toggle:hover, .notifications-btn:hover {
      border-color: var(--accent);
      transform: scale(1.05);
    }
    
    .notifications-btn { position: relative; }
    
    .notifications-btn .dot {
      position: absolute;
      top: 10px;
      right: 10px;
      width: 8px;
      height: 8px;
      background: var(--error);
      border-radius: 50%;
      animation: pulse 2s infinite;
