import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const services = await getCollection('services');
const projects = await getCollection('projects');

const stats = {
  posts: posts.length,
  services: services.length,
  projects: projects.length,
  total: posts.length + services.length + projects.length,
};

const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

const today = new Date().toLocaleDateString('en-US', { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});

// Activity feed data
const activities = [
  ...posts.map(p => ({ type: 'post', title: p.data.title, date: p.data.pubDate, icon: 'üìù' })),
  ...services.map(s => ({ type: 'service', title: s.data.title, date: new Date(), icon: 'üíº' })),
  ...projects.map(p => ({ type: 'project', title: p.data.title, date: new Date(), icon: 'üé®' })),
].sort((a, b) => b.date.valueOf() - a.date.valueOf()).slice(0, 8);
