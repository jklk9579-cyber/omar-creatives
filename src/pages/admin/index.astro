  <style>
    :root {
      --bg-primary: #0a0a0a;
      --bg-secondary: #111;
      --bg-tertiary: #1a1a1a;
      --border-color: #222;
      --text-primary: #fff;
      --text-secondary: #a0a0a0;
      --text-muted: #666;
      --accent: #f59e0b;
      --accent-hover: #f97316;
      --success: #22c55e;
      --warning: #f59e0b;
      --error: #ef4444;
      --info: #3b82f6;
    }
    
    [data-theme="light"] {
      --bg-primary: #f8f9fa;
      --bg-secondary: #fff;
      --bg-tertiary: #f1f3f4;
      --border-color: #e0e0e0;
