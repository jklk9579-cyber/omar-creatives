  <script>
    function toggleTheme() {
      const body = document.body;
      const icon = document.getElementById('themeIcon');
      if (body.getAttribute('data-theme') === 'light') {
        body.removeAttribute('data-theme');
        icon.textContent = 'üåô';
        localStorage.setItem('theme', 'dark');
      } else {
        body.setAttribute('data-theme', 'light');
        icon.textContent = '‚òÄÔ∏è';
        localStorage.setItem('theme', 'light');
      }
    }
    
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'light') {
      document.body.setAttribute('data-theme', 'light');
      document.getElementById('themeIcon').textContent = '‚òÄÔ∏è';
    }
    
    function toggleNotifications() {
      document.getElementById('notificationsPanel').classList.toggle('active');
    }
    
    function toggleShortcuts() {
      document.getElementById('shortcutsModal').classList.toggle('active');
    }
    
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('mobile-open');
    }
    
    document.addEventListener('keydown', (e) => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        document.getElementById('searchInput').focus();
      }
      if ((e.metaKey || e.ctrlKey) && e.key === 'd') {
        e.preventDefault();
        toggleTheme();
      }
      if ((e.metaKey || e.ctrlKey) && e.key === 'n') {
        e.preventDefault();
        window.location.href = '/admin/cms/#/collections/blog/new';
      }
      if (e.key === 'Escape') {
        document.getElementById('shortcutsModal').classList.remove('active');
        document.getElementById('notificationsPanel').classList.remove('active');
      }
    });
    
    const ctx = document.getElementById('contentChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
        datasets: [{
          label: 'Page Views',
          data: [120, 190, 300, 250, 420, 380, 450],
          borderColor: '#f59e0b',
          backgroundColor: 'rgba(245, 158, 11, 0.1)',
          tension: 0.4,
          fill: true,
        }, {
          label: 'Visitors',
          data: [80, 120, 200, 180, 300, 250, 320],
          borderColor: '#3b82f6',
          backgroundColor: 'rgba(59, 130, 246, 0.1)',
          tension: 0.4,
          fill: true,
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { position: 'top', labels: { color: '#a0a0a0' } }
        },
        scales: {
          x: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#666' } },
          y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#666' } }
        }
      }
    });
  </script>
