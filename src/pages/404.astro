---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Page Not Found | ${SITE_TITLE}`} description="The page you're looking for doesn't exist" />
		<style>
			body {
				padding-top: 80px;
			}
			.error-page {
				min-height: calc(100vh - 200px);
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 4rem 4rem;
				text-align: center;
			}
			.error-content {
				max-width: 600px;
			}
			.error-code {
				font-size: 10rem;
				font-weight: 800;
				line-height: 1;
				background: linear-gradient(135deg, var(--accent) 0%, #fbbf24 50%, #f59e0b 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin-bottom: 1rem;
				position: relative;
				animation: glitch 2s infinite;
			}
			@keyframes glitch {
				0%, 100% { transform: translate(0); }
				20% { transform: translate(-2px, 2px); }
				40% { transform: translate(-2px, -2px); }
				60% { transform: translate(2px, 2px); }
				80% { transform: translate(2px, -2px); }
			}
			.error-title {
				font-size: 2rem;
				color: var(--text-primary);
				margin-bottom: 1rem;
			}
			.error-description {
				color: var(--text-secondary);
				font-size: 1.1rem;
				line-height: 1.6;
				margin-bottom: 2rem;
			}
			.error-illustration {
				margin: 2rem 0;
				font-size: 5rem;
				animation: float 3s ease-in-out infinite;
			}
			@keyframes float {
				0%, 100% { transform: translateY(0); }
				50% { transform: translateY(-20px); }
			}
			.error-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.error-btn {
				padding: 1rem 2rem;
				border-radius: 10px;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s ease;
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
			}
			.error-btn.primary {
				background: var(--accent-gradient);
				color: #000;
			}
			.error-btn.primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
			}
			.error-btn.secondary {
				background: var(--bg-card);
				color: var(--text-primary);
				border: 1px solid var(--border-color);
			}
			.error-btn.secondary:hover {
				border-color: var(--accent);
				color: var(--accent);
			}
			
			/* Search suggestions */
			.suggestions {
				margin-top: 3rem;
				padding-top: 2rem;
				border-top: 1px solid var(--border-color);
			}
			.suggestions h3 {
				color: var(--text-secondary);
				font-size: 1rem;
				font-weight: 500;
				margin-bottom: 1rem;
			}
			.suggestions-list {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			.suggestion-link {
				color: var(--accent);
				text-decoration: none;
				padding: 0.5rem 1rem;
				background: rgba(245, 158, 11, 0.1);
				border-radius: 20px;
				font-size: 0.9rem;
				transition: all 0.3s ease;
			}
			.suggestion-link:hover {
				background: var(--accent);
				color: #000;
			}
			
			/* Animated background */
			.error-bg {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				pointer-events: none;
				z-index: -1;
				overflow: hidden;
			}
			.floating-shape {
				position: absolute;
				background: rgba(245, 158, 11, 0.03);
				border-radius: 50%;
				animation: floatShape 20s infinite;
			}
			.floating-shape:nth-child(1) {
				width: 300px;
				height: 300px;
				top: 10%;
				left: 10%;
				animation-delay: 0s;
			}
			.floating-shape:nth-child(2) {
				width: 200px;
				height: 200px;
				top: 60%;
				right: 10%;
				animation-delay: -5s;
			}
			.floating-shape:nth-child(3) {
				width: 150px;
				height: 150px;
				bottom: 20%;
				left: 20%;
				animation-delay: -10s;
			}
			@keyframes floatShape {
				0%, 100% { transform: translate(0, 0) rotate(0deg); }
				25% { transform: translate(50px, -50px) rotate(90deg); }
				50% { transform: translate(0, -100px) rotate(180deg); }
				75% { transform: translate(-50px, -50px) rotate(270deg); }
			}
			
			@media (max-width: 600px) {
				.error-code {
					font-size: 6rem;
				}
				.error-title {
					font-size: 1.5rem;
				}
				.error-illustration {
					font-size: 3rem;
				}
			}
		</style>
	</head>
	<body>
		<div class="error-bg">
			<div class="floating-shape"></div>
			<div class="floating-shape"></div>
			<div class="floating-shape"></div>
		</div>
		
		<Header />
		
		<main class="error-page">
			<div class="error-content">
				<div class="error-code">404</div>
				<div class="error-illustration">üîç</div>
				<h1 class="error-title">Page Not Found</h1>
				<p class="error-description">
					Oops! The page you're looking for seems to have wandered off into the digital void. 
					Don't worry, let's get you back on track.
				</p>
				
				<div class="error-buttons">
					<a href="/" class="error-btn primary">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
							<polyline points="9 22 9 12 15 12 15 22"></polyline>
						</svg>
						Go Home
					</a>
					<a href="javascript:history.back()" class="error-btn secondary">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<line x1="19" y1="12" x2="5" y2="12"></line>
							<polyline points="12 19 5 12 12 5"></polyline>
						</svg>
						Go Back
					</a>
				</div>
				
				<div class="suggestions">
					<h3>Maybe try one of these?</h3>
					<div class="suggestions-list">
						<a href="/" class="suggestion-link">Home</a>
						<a href="/services" class="suggestion-link">Services</a>
						<a href="/projects" class="suggestion-link">Projects</a>
						<a href="/blog" class="suggestion-link">Blog</a>
						<a href="/contact" class="suggestion-link">Contact</a>
					</div>
				</div>
			</div>
		</main>
		
		<Footer />
	</body>
</html>
