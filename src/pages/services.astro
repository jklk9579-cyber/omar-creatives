---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Services | ${SITE_TITLE}`} description="Professional digital services" />
		<style>
			body {
				padding-top: 80px;
			}
			.page-header {
				padding: 4rem 2rem;
				text-align: center;
				position: relative;
			}
			.page-header::before {
				content: '';
				position: absolute;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 600px;
				height: 600px;
				background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
				pointer-events: none;
			}
			.page-header h1 {
				font-size: 3.5rem;
				margin-bottom: 1rem;
				background: linear-gradient(135deg, #fff 0%, #a1a1aa 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				position: relative;
			}
			.page-header p {
				color: var(--text-secondary);
				font-size: 1.2rem;
				max-width: 600px;
				margin: 0 auto;
			}
			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
				gap: 1.5rem;
				padding: 3rem 0 5rem;
			}
			.service-card {
				background: var(--bg-card);
				border: 1px solid var(--border-color);
				border-radius: 16px;
				padding: 2rem;
				transition: all 0.3s ease;
				position: relative;
				overflow: hidden;
			}
			.service-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 2px;
				background: var(--accent-gradient);
				opacity: 0;
				transition: opacity 0.3s ease;
			}
			.service-card:hover {
				border-color: var(--accent);
				transform: translateY(-5px);
			}
			.service-card:hover::before {
				opacity: 1;
			}
			.service-icon {
				font-size: 3rem;
				margin-bottom: 1.5rem;
				display: block;
			}
			.service-card h2 {
				margin: 0 0 1rem 0;
				font-size: 1.4rem;
				color: var(--text-primary);
			}
			.service-card p {
				color: var(--text-secondary);
				margin: 0 0 1.5rem 0;
				line-height: 1.7;
			}
			.service-price {
				font-weight: 700;
				color: var(--accent);
				font-size: 1.25rem;
				margin-bottom: 1rem;
			}
			.service-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: var(--accent);
				text-decoration: none;
				font-weight: 600;
				transition: gap 0.3s ease;
			}
			.service-link:hover {
				gap: 1rem;
			}
			.featured-badge {
				position: absolute;
				top: 1rem;
				right: 1rem;
				background: var(--accent-gradient);
				color: #000;
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				font-size: 0.75rem;
				font-weight: 700;
			}
			main {
				width: 1100px;
				max-width: calc(100% - 2rem);
				margin: 0 auto;
				padding: 0 1rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1 data-i18n="servicesPage.title">Services</h1>
				<p data-i18n="servicesPage.subtitle">I offer a range of professional digital services to help bring your ideas to life</p>
			</section>
			
			{sortedServices.length > 0 ? (
				<div class="services-grid">
					{sortedServices.map((service) => (
						<article class="service-card">
							{service.data.featured && <span class="featured-badge">Featured</span>}
							<span class="service-icon">{service.data.icon || '‚≠ê'}</span>
							<h2>{service.data.title}</h2>
							<p>{service.data.description}</p>
							{service.data.price && (
								<div class="service-price">{service.data.price}</div>
							)}
							<a href={`/services/${service.slug}`} class="service-link">
							<span data-i18n="servicesPage.learnMore">Learn More</span> <span>‚Üí</span>
							</a>
						</article>
					))}
				</div>
			) : (
				<div class="services-grid">
					<article class="service-card">
						<span class="featured-badge" data-i18n="servicesPage.popular">Popular</span>
						<span class="service-icon">ü§ñ</span>
						<h2 data-i18n="servicesPage.aiTitle">AI Content Creation</h2>
						<p data-i18n="servicesPage.aiDesc">Leverage AI to create engaging content, automate workflows, and enhance your digital presence</p>
						<div class="service-price">From $300</div>
						<a href="/contact" class="service-link" data-i18n="servicesPage.getStarted">Get Started <span>‚Üí</span></a>
					</article>
					<article class="service-card">
						<span class="featured-badge" data-i18n="servicesPage.popular">Popular</span>
						<span class="service-icon">üåê</span>
						<h2 data-i18n="servicesPage.webTitle">Web Development</h2>
						<p data-i18n="servicesPage.webDesc">Modern, fast, and responsive websites built with the latest technologies and best practices</p>
						<div class="service-price">From $500</div>
						<a href="/contact" class="service-link" data-i18n="servicesPage.getStarted">Get Started <span>‚Üí</span></a>
					</article>
					<article class="service-card">
						<span class="service-icon">üì±</span>
						<h2 data-i18n="servicesPage.appTitle">App Development</h2>
						<p data-i18n="servicesPage.appDesc">Cross-platform mobile applications for iOS and Android with seamless user experience</p>
						<div class="service-price">From $1,000</div>
						<a href="/contact" class="service-link" data-i18n="servicesPage.getStarted">Get Started <span>‚Üí</span></a>
					</article>
					<article class="service-card">
						<span class="service-icon">üé®</span>
						<h2 data-i18n="servicesPage.uiTitle">UI/UX Design</h2>
						<p data-i18n="servicesPage.uiDesc">Beautiful, intuitive interfaces that delight users and drive engagement</p>
						<div class="service-price">From $400</div>
						<a href="/contact" class="service-link" data-i18n="servicesPage.getStarted">Get Started <span>‚Üí</span></a>
					</article>
				</div>
			)}
		</main>
		<Footer />
	</body>
</html>
