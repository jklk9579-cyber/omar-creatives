---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const projects = await getCollection('projects');
const posts = await getCollection('blog');
const recentPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Hero Section - Premium Design */
			.hero {
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 2rem 4rem;
				position: relative;
				overflow: hidden;
			}
			
			.hero-wrapper {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
				width: 100%;
				max-width: 1400px;
				position: relative;
				z-index: 1;
			}
			
			.hero-image-container {
				position: relative;
				display: flex;
				justify-content: center;
				align-items: flex-end;
				min-height: 700px;
			}
			
			.hero-image-circle {
				position: absolute;
				bottom: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 520px;
				height: 520px;
				background: linear-gradient(180deg, #f59e0b 0%, #ea580c 100%);
				border-radius: 50%;
				z-index: 0;
			}
			
			.hero-image-container img {
				position: relative;
				z-index: 1;
				height: 750px;
				width: auto;
				object-fit: contain;
				object-position: bottom;
			}
			
			.hero-side-elements {
				position: absolute;
				top: 50%;
				transform: translateY(-50%);
				width: 200px;
			}
			
			.hero-quote {
				left: -220px;
			}
			
			.hero-stats-side {
				right: -220px;
				text-align: right;
			}
			
			.hero-quote-icon {
				color: var(--accent);
				font-size: 2rem;
				margin-bottom: 0.5rem;
			}
			
			.hero-quote-text {
				color: var(--text-secondary);
				font-size: 0.9rem;
				line-height: 1.6;
				font-style: italic;
			}
			
			.hero-stars {
				color: var(--accent);
				font-size: 1.25rem;
				margin-bottom: 0.5rem;
			}
			
			.hero-experience {
				font-size: 1.75rem;
				font-weight: 700;
				color: var(--text-secondary);
			}
			
			.hero-experience span {
				font-size: 0.85rem;
				font-weight: 400;
				display: block;
			}
			
			/* Elegant Background */
			.hero-bg {
				position: absolute;
				inset: 0;
				overflow: hidden;
			}
			.hero-bg::before {
				content: '';
				position: absolute;
				top: -50%;
				left: -50%;
				width: 200%;
				height: 200%;
				background: 
					radial-gradient(ellipse 80% 50% at 50% -20%, rgba(245, 158, 11, 0.15), transparent),
					radial-gradient(ellipse 60% 40% at 80% 50%, rgba(249, 115, 22, 0.08), transparent),
					radial-gradient(ellipse 50% 30% at 20% 80%, rgba(245, 158, 11, 0.05), transparent);
			}
			.grid-overlay {
				position: absolute;
				inset: 0;
				background-image: 
					linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
					linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
				background-size: 60px 60px;
				mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
			}
			
			.hero-content {
				position: relative;
				z-index: 1;
				text-align: left;
			}
			
			.hero-eyebrow {
				display: inline-flex;
				align-items: center;
				gap: 0.75rem;
				background: rgba(245, 158, 11, 0.08);
				border: 1px solid rgba(245, 158, 11, 0.2);
				padding: 0.6rem 1.25rem;
				border-radius: 50px;
				font-size: 0.85rem;
				color: var(--accent);
				margin-bottom: 2rem;
				font-weight: 500;
				letter-spacing: 0.5px;
			}
			.hero-eyebrow .pulse-dot {
				width: 8px;
				height: 8px;
				background: #22c55e;
				border-radius: 50%;
				animation: pulse 2s infinite;
				box-shadow: 0 0 10px #22c55e;
			}
			@keyframes pulse {
				0%, 100% { opacity: 1; transform: scale(1); }
				50% { opacity: 0.7; transform: scale(1.1); }
			}
			/* ── Video Ripple Overlay (Homepage) ── */
			.video-ripple-overlay {
				position: absolute;
				inset: 0;
				z-index: 2;
				pointer-events: none;
				overflow: hidden;
			}
			.video-ripple-overlay::before {
				content: '';
				position: absolute;
				inset: 0;
				background: rgba(0, 0, 0, 0.25);
			}
			.video-ripple-overlay .vr {
				position: absolute;
				top: 50%; left: 50%;
				border-radius: 50%;
				border: 2px solid rgba(245, 158, 11, 0.5);
				transform: translate(-50%, -50%) scale(0);
				animation: vrRipple 3s ease-out infinite;
			}
			.video-ripple-overlay .vr:nth-child(1) { width: 50px; height: 50px; animation-delay: 0s; }
			.video-ripple-overlay .vr:nth-child(2) { width: 100px; height: 100px; animation-delay: 0.5s; }
			.video-ripple-overlay .vr:nth-child(3) { width: 150px; height: 150px; animation-delay: 1s; }
			.video-ripple-overlay .vr:nth-child(4) { width: 210px; height: 210px; animation-delay: 1.5s; }
			.video-ripple-overlay .vr:nth-child(5) { width: 280px; height: 280px; animation-delay: 2s; }
			.video-ripple-overlay .vr:nth-child(6) { width: 360px; height: 360px; animation-delay: 2.5s; }
			.vr-play {
				position: absolute;
				top: 50%; left: 50%;
				transform: translate(-50%, -50%);
				width: 48px; height: 48px;
				background: rgba(245, 158, 11, 0.9);
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				box-shadow: 0 0 25px rgba(245, 158, 11, 0.5), 0 0 50px rgba(245, 158, 11, 0.2);
				animation: vrPlayPulse 2s ease-in-out infinite;
				z-index: 3;
			}
			@keyframes vrRipple {
				0% { transform: translate(-50%, -50%) scale(0); opacity: 0.7; border-color: rgba(245, 158, 11, 0.6); }
				50% { opacity: 0.35; }
				100% { transform: translate(-50%, -50%) scale(1); opacity: 0; }
			}
			@keyframes vrPlayPulse {
				0%, 100% { transform: translate(-50%, -50%) scale(1); box-shadow: 0 0 25px rgba(245, 158, 11, 0.5); }
				50% { transform: translate(-50%, -50%) scale(1.1); box-shadow: 0 0 35px rgba(245, 158, 11, 0.7); }
			}
			
			.hero h1 {
				font-size: clamp(2.5rem, 6vw, 4.5rem);
				margin-bottom: 1.5rem;
				line-height: 1.1;
				font-weight: 700;
				letter-spacing: -0.02em;
			}
			.hero h1 .line {
				display: block;
			}
			.hero h1 .gradient {
				background: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.hero h1 .outline {
				-webkit-text-stroke: 1px rgba(255,255,255,0.3);
				-webkit-text-fill-color: transparent;
			}
			
			.hero-description {
				font-size: 1.15rem;
				color: var(--text-secondary);
				margin-bottom: 2.5rem;
				max-width: 500px;
				line-height: 1.7;
			}
			
			.hero-cta {
				display: flex;
				gap: 1rem;
				justify-content: flex-start;
				flex-wrap: wrap;
				margin-bottom: 0;
			}
			.btn {
				padding: 1rem 2rem;
				border-radius: 12px;
				font-weight: 600;
				text-decoration: none;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 0.95rem;
				letter-spacing: 0.3px;
			}
			.btn-primary {
				background: var(--accent-gradient);
				color: #000;
				box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
			}
			.btn-primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 8px 30px rgba(245, 158, 11, 0.4);
				color: #000;
			}
			.btn-secondary {
				background: rgba(255,255,255,0.05);
				color: var(--text-primary);
				border: 1px solid rgba(255,255,255,0.1);
				backdrop-filter: blur(10px);
			}
			.btn-secondary:hover {
				background: rgba(255,255,255,0.1);
				border-color: rgba(255,255,255,0.2);
			}
			
			/* Stats Row */
			.stats-row {
				display: flex;
				justify-content: center;
				gap: 3rem;
				padding-top: 3rem;
				border-top: 1px solid rgba(255,255,255,0.06);
			}
			.stat {
				text-align: center;
			}
			.stat-value {
				font-size: 2.75rem;
				font-weight: 700;
				background: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				line-height: 1;
				margin-bottom: 0.25rem;
			}
			.stat-label {
				color: var(--text-muted);
				font-size: 0.85rem;
				text-transform: uppercase;
				letter-spacing: 1px;
			}

			/* About Me Section */
			.about-intro {
				display: grid;
				grid-template-columns: auto 1fr;
				gap: 6rem;
				align-items: center;
				justify-items: center;
			}
			.about-image {
				position: relative;
				display: flex;
				justify-content: center;
				align-items: center;
			}
			.about-image img {
				width: auto;
				height: 850px;
				object-fit: contain;
				position: relative;
				z-index: 1;
				filter: drop-shadow(0 0 40px rgba(245, 158, 11, 0.25)) drop-shadow(0 0 80px rgba(245, 158, 11, 0.15));
			}
			.about-image::before {
				content: '';
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 400px;
				height: 400px;
				background: radial-gradient(circle at center, rgba(245, 158, 11, 0.12) 0%, transparent 70%);
				z-index: 0;
				animation: glowPulse 3s ease-in-out infinite;
			}
			@keyframes glowPulse {
				0%, 100% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
				50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.1); }
			}
			.about-text h2 {
				font-size: 2.75rem;
				margin-bottom: 1.5rem;
				line-height: 1.2;
			}
			.about-text h2 .highlight {
				background: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.about-text p {
				color: var(--text-secondary);
				font-size: 1.15rem;
				line-height: 1.8;
				margin-bottom: 1.5rem;
			}
			.about-text .lead {
				font-size: 1.3rem;
				color: var(--text-primary);
				font-weight: 500;
			}
			.about-cta {
				margin-top: 2.5rem;
			}
			@media (max-width: 900px) {
				.about-intro {
					grid-template-columns: 1fr;
					gap: 3rem;
					text-align: center;
				}
				.about-image {
					order: -1;
					display: flex;
					justify-content: center;
				}
				.about-image img {
					height: 400px;
				}
				.about-image::before {
					width: 300px;
					height: 300px;
				}
			}
			
			/* Hero Responsive */
			@media (max-width: 1200px) {
				.hero-side-elements {
					display: none;
				}
			}
			@media (max-width: 900px) {
				.hero-wrapper {
					grid-template-columns: 1fr;
					gap: 2rem;
					text-align: center;
				}
				.hero-content {
					text-align: center;
					order: 2;
				}
				.hero-cta {
					justify-content: center;
				}
				.hero-image-container {
					order: 1;
					min-height: 400px;
				}
				.hero-image-container img {
					height: 450px;
				}
				.hero-image-circle {
					width: 300px;
					height: 300px;
				}
			}

			/* Section Styling */
			.section {
				padding: 7rem 4rem;
				position: relative;
			}
			.section-dark {
				background: var(--bg-secondary);
			}
			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: flex-end;
				margin-bottom: 3.5rem;
			}
			.section-label {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 0.8rem;
				color: var(--accent);
				text-transform: uppercase;
				letter-spacing: 2px;
				font-weight: 600;
				margin-bottom: 0.75rem;
			}
			.section-label::before {
				content: '';
				width: 20px;
				height: 2px;
				background: var(--accent);
			}
			.section-header h2 {
				font-size: 2.75rem;
				margin: 0;
				font-weight: 700;
				letter-spacing: -0.02em;
			}
			.view-all {
				color: var(--text-secondary);
				font-size: 0.9rem;
				display: flex;
				align-items: center;
				gap: 0.5rem;
				transition: all 0.3s ease;
				text-decoration: none;
			}
			.view-all:hover {
				color: var(--accent);
				gap: 0.75rem;
			}

			/* Services Section Layout */
			.services-container {
				display: grid;
				grid-template-columns: 0.6fr 1.4fr;
				gap: 2rem;
				align-items: center;
			}
			.robot-mascot {
				position: relative;
				max-width: 280px;
				margin: 0 auto;
			}
			.robot-mascot img {
				width: 100%;
				height: auto;
				filter: drop-shadow(0 20px 40px rgba(245, 158, 11, 0.3));
				animation: robotFloat 4s ease-in-out infinite;
			}
			@keyframes robotFloat {
				0%, 100% {
					transform: translateY(0) rotate(0deg);
				}
				25% {
					transform: translateY(-15px) rotate(2deg);
				}
				50% {
					transform: translateY(-8px) rotate(0deg);
				}
				75% {
					transform: translateY(-20px) rotate(-2deg);
				}
			}
			.robot-mascot::before {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 50%;
				transform: translateX(-50%);
				width: 60%;
				height: 20px;
				background: radial-gradient(ellipse, rgba(245, 158, 11, 0.3) 0%, transparent 70%);
				border-radius: 50%;
				animation: shadowPulse 4s ease-in-out infinite;
			}
			@keyframes shadowPulse {
				0%, 100% {
					transform: translateX(-50%) scale(1);
					opacity: 0.6;
				}
				25% {
					transform: translateX(-50%) scale(0.85);
					opacity: 0.4;
				}
				50% {
					transform: translateX(-50%) scale(0.9);
					opacity: 0.5;
				}
				75% {
					transform: translateX(-50%) scale(0.8);
					opacity: 0.35;
				}
			}
			/* Services Grid - Premium Cards */
			.services-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1.25rem;
			}
			.service-card {
				background: linear-gradient(135deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
				border: 1px solid rgba(255,255,255,0.06);
				border-radius: 20px;
				padding: 2rem;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				position: relative;
				overflow: hidden;
			}
			.service-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 1px;
				background: linear-gradient(90deg, transparent, rgba(245, 158, 11, 0.3), transparent);
				opacity: 0;
				transition: opacity 0.3s ease;
			}
			.service-card:hover {
				transform: translateY(-8px);
				border-color: rgba(245, 158, 11, 0.3);
				box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
			}
			.service-card:hover::before {
				opacity: 1;
			}
			.service-icon {
				width: 60px;
				height: 60px;
				background: rgba(245, 158, 11, 0.1);
				border-radius: 16px;
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: 1.25rem;
				transition: all 0.3s ease;
			}
			.service-icon svg {
				width: 28px;
				height: 28px;
				stroke: var(--accent);
			}
			.service-card:hover .service-icon {
				background: rgba(245, 158, 11, 0.2);
				transform: scale(1.1);
			}
			.service-card h3 {
				font-size: 1.2rem;
				margin-bottom: 0.5rem;
				font-weight: 600;
			}
			.service-card p {
				font-size: 0.9rem;
				margin: 0;
				color: var(--text-secondary);
				line-height: 1.6;
			}



			/* ═══ Projects Grid ═══ */
			.projects-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1.5rem;
				max-width: 1300px;
				margin: 0 auto;
			}

			/* Card */
			.project-card {
				position: relative;
				border-radius: 16px;
				overflow: hidden;
				aspect-ratio: 4 / 3;
				text-decoration: none;
				cursor: pointer;
				isolation: isolate;
				opacity: 0;
				transform: translateY(30px) scale(0.97);
				animation: cardReveal 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
			}
			.project-card:nth-child(1) { animation-delay: 0s; }
			.project-card:nth-child(2) { animation-delay: 0.1s; }
			.project-card:nth-child(3) { animation-delay: 0.2s; }
			.project-card:nth-child(4) { animation-delay: 0.3s; }
			.project-card:nth-child(5) { animation-delay: 0.4s; }
			.project-card:nth-child(6) { animation-delay: 0.5s; }
			.project-card:nth-child(7) { animation-delay: 0.6s; }
			.project-card:nth-child(8) { animation-delay: 0.7s; }
			.project-card:nth-child(9) { animation-delay: 0.8s; }
			@keyframes cardReveal {
				to { opacity: 1; transform: translateY(0) scale(1); }
			}

			/* Image */
			.project-image {
				position: absolute;
				inset: 0;
				overflow: hidden;
				background: #111;
			}
			.project-image img {
				width: 100%; height: 100%;
				object-fit: cover;
				object-position: center top;
				transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
			}
			.project-card:hover .project-image img {
				transform: scale(1.08);
			}

			/* Gradient overlay */
			.project-image::after {
				content: '';
				position: absolute;
				inset: 0;
				background: linear-gradient(0deg, rgba(0,0,0,0.3) 0%, transparent 40%);
				z-index: 1;
				transition: opacity 0.4s;
				opacity: 0;
			}
			.project-card:hover .project-image::after {
				opacity: 1;
			}

			/* Accent border glow on hover */
			.project-card::before {
				content: '';
				position: absolute;
				inset: 0;
				border-radius: 16px;
				padding: 1.5px;
				background: linear-gradient(135deg, transparent 40%, rgba(245,158,11,0.6) 50%, transparent 60%);
				background-size: 250% 250%;
				-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
				mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
				-webkit-mask-composite: xor;
				mask-composite: exclude;
				opacity: 0;
				transition: opacity 0.5s;
				animation: shimmer 5s ease infinite;
				z-index: 4;
				pointer-events: none;
			}
			@keyframes shimmer {
				0%   { background-position: 0% 50%; }
				50%  { background-position: 100% 50%; }
				100% { background-position: 0% 50%; }
			}
			.project-card:hover::before { opacity: 1; }
			.project-card:hover {
				box-shadow: 0 20px 50px rgba(0,0,0,0.5), 0 0 30px rgba(245,158,11,0.06);
			}

			/* Content - hidden */
			.project-content { display: none; }
			.project-tag { display: none; }
			.project-card h3 { display: none; }
			.project-card p { display: none; }

			/* Arrow */
			.project-card .card-arrow {
				position: absolute;
				top: 0.85rem; right: 0.85rem;
				width: 32px; height: 32px;
				border-radius: 50%;
				background: rgba(255,255,255,0.08);
				backdrop-filter: blur(12px);
				border: 1px solid rgba(255,255,255,0.12);
				display: flex; align-items: center; justify-content: center;
				z-index: 3;
				opacity: 0;
				transform: translate(6px, -6px) rotate(-45deg);
				transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
