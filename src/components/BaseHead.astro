---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import type { ImageMetadata } from "astro";
import FallbackImage from "../assets/blog-placeholder-1.jpg";
import { SITE_TITLE } from "../consts";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  keywords?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = FallbackImage, keywords } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- SEO Meta Tags -->
<meta name="robots" content="index, follow" />
<meta name="theme-color" content="#f59e0b" />
<meta
  name="keywords"
  content={keywords ||
    "Graphic Design, Web Design, UI/UX Design, App Development, Logo Design, Freelance, Omar Abdelfattah, تصميم جرافيك, تصميم مواقع, تصميم تطبيقات, تصميم شعارات, هوية بصرية, صانع محتوى"}
/>
<meta name="author" content={SITE_TITLE} />

<!-- Font preloads -->
<link
  rel="preload"
  href="/fonts/atkinson-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/atkinson-bold.woff"
  as="font"
  type="font/woff"
  crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url).href} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url).href} />

<!-- Structured Data (JSON-LD) -->
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    name: SITE_TITLE,
    url: "https://omarcreatives.com",
    logo: "https://omarcreatives.com/favicon.png",
    description: description,
  })}
/>
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: SITE_TITLE,
    url: "https://omarcreatives.com",
  })}
/>

<!-- Netlify Identity Widget (for CMS login) -->
<script
  is:inline
  src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
<script is:inline>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", (user) => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>

<!-- Language/RTL Support + body class for project language switching -->
<script is:inline>
  (function () {
    const savedLang = localStorage.getItem("language") || "en";
    document.documentElement.dir = savedLang === "ar" ? "rtl" : "ltr";
    document.documentElement.lang = savedLang;
    function setBodyLang() {
      if (document.body) {
        document.body.classList.remove("is-en", "is-ar");
        document.body.classList.add(savedLang === "ar" ? "is-ar" : "is-en");
      }
    }
    setBodyLang();
    if (!document.body)
      document.addEventListener("DOMContentLoaded", setBodyLang);
  })();
</script>

<!-- Google Fonts for Arabic -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;500;600;700;800&family=Tajawal:wght@400;500;700&display=swap"
  rel="stylesheet"
/>

<!-- i18n Translation Script -->
<script is:inline src="/js/i18n.js"></script>
