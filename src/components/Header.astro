---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import LanguageSwitcher from "./LanguageSwitcher.astro";
---

<header>
	<nav>
		<a href="/" class="logo-link">
			<img src="/images/logo.png" alt="Omar Creatives" class="logo" />
		</a>
		<div class="internal-links">
			<HeaderLink href="/"
				><span data-i18n="nav.home">Home</span></HeaderLink
			>
			<HeaderLink href="/services"
				><span data-i18n="nav.services">Services</span></HeaderLink
			>
			<HeaderLink href="/projects"
				><span data-i18n="nav.work">Work</span></HeaderLink
			>

			<HeaderLink href="/testimonials"
				><span data-i18n="nav.testimonials">Testimonials</span
				></HeaderLink
			>
			<HeaderLink href="/blog"
				><span data-i18n="nav.blog">Blog</span></HeaderLink
			>
		</div>
		<div class="nav-cta">
			<LanguageSwitcher />
			<a href="/contact" class="contact-btn"
				><span data-i18n="nav.letsTalk">Let's Talk</span></a
			>
		</div>
		<button
			class="mobile-menu-btn"
			id="mobileMenuBtn"
			aria-label="Toggle Menu"
			aria-expanded="false"
			aria-controls="mobileMenu"
		>
			<span></span>
			<span></span>
			<span></span>
		</button>
	</nav>
	<div class="mobile-menu" id="mobileMenu">
		<a href="/"><span data-i18n="nav.home">Home</span></a>
		<a href="/services"><span data-i18n="nav.services">Services</span></a>
		<a href="/projects"><span data-i18n="nav.work">Work</span></a>

		<a href="/testimonials"
			><span data-i18n="nav.testimonials">Testimonials</span></a
		>
		<a href="/blog"><span data-i18n="nav.blog">Blog</span></a>
		<a href="/about"><span data-i18n="nav.about">About</span></a>
		<a href="/faq"><span data-i18n="nav.faq">FAQ</span></a>
		<a href="/contact" class="mobile-cta"
			><span data-i18n="nav.letsTalk">Let's Talk</span></a
		>
	</div>
</header>
<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		padding: 1.5rem 4rem;
		background: rgba(10, 10, 10, 0.8);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid var(--border-color);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 100%;
		margin: 0 auto;
	}
	.logo-link {
		display: flex;
		align-items: center;
		text-decoration: none;
	}
	.logo {
		height: 120px;
		width: auto;
	}
	.internal-links {
		display: flex;
		gap: 1.25rem;
	}
	.internal-links :global(a) {
		padding: 0.85rem 1.5rem;
		color: var(--text-secondary);
		text-decoration: none;
		font-size: 1.35rem;
		border-radius: 8px;
		transition: all 0.3s ease;
		font-family: "Motivate", "Inter", sans-serif;
	}
	.internal-links :global(a:hover),
	.internal-links :global(a.active) {
		color: var(--text-primary);
		background: var(--bg-card);
	}
	.nav-cta {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.contact-btn {
		padding: 1rem 2rem;
		background: var(--accent-gradient);
		color: #000;
		text-decoration: none;
		border-radius: 12px;
		font-weight: 600;
		font-size: 1.3rem;
		transition: all 0.3s ease;
		font-family: "Motivate", "Inter", sans-serif;
	}
	.contact-btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 5px 20px rgba(245, 158, 11, 0.3);
	}

	/* Mobile Menu Button */
	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		gap: 5px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		z-index: 1001;
	}
	.mobile-menu-btn span {
		width: 24px;
		height: 2px;
		background: var(--text-primary);
		transition: all 0.3s ease;
	}
	.mobile-menu-btn.active span:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}
	.mobile-menu-btn.active span:nth-child(2) {
		opacity: 0;
	}
	.mobile-menu-btn.active span:nth-child(3) {
		transform: rotate(-45deg) translate(5px, -5px);
	}

	/* Mobile Menu */
	.mobile-menu {
		display: none;
		position: fixed;
		top: 70px;
		left: 0;
		right: 0;
		background: rgba(10, 10, 10, 0.98);
		backdrop-filter: blur(20px);
		padding: 1rem;
		flex-direction: column;
		gap: 0.5rem;
		border-bottom: 1px solid var(--border-color);
		transform: translateY(-100%);
		opacity: 0;
		transition: all 0.3s ease;
	}
	.mobile-menu.active {
		transform: translateY(0);
		opacity: 1;
	}
	.mobile-menu a {
		padding: 1rem;
		color: var(--text-secondary);
		text-decoration: none;
		border-radius: 8px;
		transition: all 0.3s;
		font-family: "Motivate", "Inter", sans-serif;
	}
	.mobile-menu a:hover {
		background: var(--bg-card);
		color: var(--text-primary);
	}
	.mobile-menu .mobile-cta {
		background: var(--accent-gradient);
		color: #000;
		text-align: center;
		font-weight: 600;
		margin-top: 0.5rem;
	}

	@media (max-width: 900px) {
		.internal-links,
		.nav-cta {
			display: none;
		}
		.mobile-menu-btn {
			display: flex;
		}
		.mobile-menu {
			display: flex;
		}
		header {
			padding: 1rem;
		}
	}

	/* LTR (English) Styles for Header */
	:global([dir="ltr"]) header {
		direction: ltr;
	}

	:global([dir="ltr"]) nav {
		flex-direction: row;
	}

	:global([dir="ltr"]) .internal-links {
		flex-direction: row;
	}

	:global([dir="ltr"]) .nav-cta {
		flex-direction: row;
	}

	/* RTL Styles for Header */
	:global([dir="rtl"]) header {
		direction: rtl;
	}

	:global([dir="rtl"]) nav {
		flex-direction: row-reverse;
		direction: rtl;
	}

	:global([dir="rtl"]) .internal-links {
		flex-direction: row-reverse;
		gap: 0.75rem;
	}

	:global([dir="rtl"]) .internal-links :global(a) {
		font-family: "GumelaArabic", "Cairo", "Tajawal", sans-serif;
		font-size: 1.9rem;
		font-weight: 300;
		padding: 0.75rem 1.25rem;
	}

	:global([dir="rtl"]) .nav-cta {
		flex-direction: row-reverse;
		gap: 0.75rem;
	}

	:global([dir="rtl"]) .contact-btn {
		font-family: "GumelaArabic", "Cairo", "Tajawal", sans-serif;
		font-size: 1.7rem;
		font-weight: 300;
		padding: 0.85rem 1.5rem;
	}

	:global([dir="rtl"]) .mobile-menu {
		text-align: right;
		direction: rtl;
	}

	:global([dir="rtl"]) .mobile-menu a {
		font-family: "GumelaArabic", "Cairo", "Tajawal", sans-serif;
		text-align: right;
		font-size: 1.9rem;
		font-weight: 300;
	}

	:global([dir="rtl"]) .mobile-menu .mobile-cta {
		text-align: center;
	}
</style>

<script>
	const menuBtn = document.getElementById("mobileMenuBtn");
	const mobileMenu = document.getElementById("mobileMenu");

	menuBtn?.addEventListener("click", () => {
		const isExpanded = menuBtn.classList.toggle("active");
		menuBtn.setAttribute("aria-expanded", isExpanded.toString());
		mobileMenu?.classList.toggle("active");
	});
</script>
